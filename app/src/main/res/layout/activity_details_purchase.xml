<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsPurchaseActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgpurchase1"
                android:layout_width="400px"
                android:layout_height="300px"
                android:layout_gravity="center"
                android:layout_marginTop="200px"
                android:src="@drawable/img" />

            <Button
                android:id="@+id/btnphoto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="Take photo"
                android:textColor="#8B3F51B5"
                android:textSize="20px"
                android:layout_gravity="center"
                android:layout_marginBottom="20px"/>

            <LinearLayout
                android:layout_width="700px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginStart="30px">

                <EditText
                    android:id="@+id/etname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:hint="Item Name"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="700px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="30px">

                <EditText
                    android:id="@+id/etcolor"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:hint="Item Color"
                    android:inputType="textMultiLine"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="700px"
                android:layout_marginStart="30px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etprice"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:hint="Price in $"
                    android:inputType="numberDecimal"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="700px"
                android:layout_marginStart="30px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etquant"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:hint="Quantity"
                    android:inputType="number"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="700px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30px"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etsupp"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:hint="Supplier name"
                    android:inputType="textPersonName"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="700px"
                android:layout_marginStart="30px"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etphone"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_marginBottom="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="30px"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:textColor="#8B3F51B5"
                    android:id="@+id/selectdate1"
                    android:text="Select date"
                    android:backgroundTint="@color/white">

                </Button>
                <TextView
                    android:id="@+id/etdate1"
                    android:layout_width="100px"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="start|top"
                    android:hint=""
                    android:textSize="20px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/btnsave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginEnd="20px"
                    android:backgroundTint="#8B3F51B5"
                     android:background="@drawable/buttonbackground"
                    android:text="Save" />

                <Button
                    android:id="@+id/btncancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#8B3F51B5"
                    android:text="Cancel"
                    android:background="@drawable/buttonbackground"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>